<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/funcoesRestaurante.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/siteNovo.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="@Url.Action("Index","Home")">FOODLOC</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active">
                    <div class="dropdown">
                        <a id="dropdownRede">@Html.ActionLink("Restaurantes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand dropbtn left" })</a>
                    <div class="dropdown-content">
                        @Html.ActionLink("Todos Restaurantes", "Global", "Restaurante")
                        @Html.ActionLink("Meus Restaurantes", "Index", "Restaurante")
                    </div>
                    </div>
                </li>
                <li>
                    <div class="dropdown">
                        <a>@Html.ActionLink("Usuario", "Index", "Usuario", new { area = "" }, new { @class = "navbar-brand dropbtn right login" })</a>
                    <div class="login dropdown-content">
                        @Html.ActionLink("Perfil", "Perfil", "Usuario")
                        @Html.ActionLink("Procurar Usuario", "Procurar", "Usuario")
                        @Html.ActionLink("Sugestoes", "Sugestoes", "Usuario")
                        @Html.ActionLink("Logout", "Logout", "Usuario")
                    </div>
                    </div>
                </li>
            </ul>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Vinicius Nicoceli</p>
        </footer>
    </div>
</body>




    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/filtrar-tabela.js"></script>
    <script src="~/Scripts/controlesAjax.js"></script>
    <script src="~/Scripts/searchBox.js"></script>
</html>